<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title">Créer un nouvel événement</h1>

          <%= form_with(model: @event, url: events_path) do |form| %>
            <%= form.hidden_field :user_id, value: current_user.id %> <!-- Champ caché pour user_id -->

            <div class="form-group">
              <%= form.label :start_date, class: "form-label" %>
              <%= form.datetime_local_field :start_date, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :duration, class: "form-label" %>
              <%= form.number_field :duration, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :title, class: "form-label" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :price, class: "form-label" %>
              <%= form.number_field :price, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :location, class: "form-label" %>
              <%= form.text_field :location, class: "form-control" %>
            </div>

            <div class="actions">
              <%= form.submit "Créer l'événement", class: "btn btn-primary" %>
            </div>
          <% end %>

          <%= link_to "Retour", events_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
