<div class="container d-flex justify-content-center">
  <div class="card mx-auto" style="width: 18rem;">
    <% if @user.avatar.attached? %>
      <%= image_tag url_for(@user.avatar), class: "card-img-top", alt: "Photo de profil" %>
    <% else %>
      <div class="card-img-top">
        <p>Aucune photo de profil pour le moment.</p>
      </div>
    <% end %>
    <div class="card-body">
      <h5 class="card-title">Profil de <%= @user.first_name %> <%= @user.last_name %></h5>
      <p class="card-text">Description : <%= @user.description %></p>
      <p class="card-text">Email : <%= @user.email %></p>

      <h5 class="card-title">Événements créés par <%= @user.first_name %></h5>
      <% @user.events.each do |event| %>
        <p class="card-text"><%= link_to event.title, event_path(event) %></p>
      <% end %>

      <% if current_user == @user %>
        <%= link_to "Modifier mon profil", edit_user_registration_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
