<h1>Profil de <%= @user.first_name %> <%= @user.last_name %></h1>

<p>Description : <%= @user.description %></p>
<p>Email : <%= @user.email %></p>

<h2>Événements créés par <%= @user.first_name %></h2>
<% @user.events.each do |event| %>
  <p><%= link_to event.title, event_path(event) %></p>
<% end %>

<% if current_user == @user %>
  <%= link_to "Modifier mon profil", edit_user_registration_path %>
<% end %>

<!-- message flash si modif user ok or not ok -->
<% if flash[:error].present? %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:error] %>
  </div>
<% end %>

<% if flash[:success] %>
  <div class="alert alert-success">
      <%= flash[:success] %>
  </div>
<% end %> 
